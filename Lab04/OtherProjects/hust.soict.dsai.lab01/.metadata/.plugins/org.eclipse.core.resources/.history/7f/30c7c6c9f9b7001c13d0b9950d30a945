import java.util.Scanner;
public class StarTriangle {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Input height of triangle: ");
		int n = sc.nextInt();
		
		for (int i=1; i<=5; i++) {
			for (int j=n; j>0; j--) {
				System.out.print(" ");
			}
			for (int j=1; j<=i; j++) {
				System.out.print("*");
			}
			for (int j=n; j>0; j--) {
				System.out.print(" ");
			}
			
		}
	}
	
}
